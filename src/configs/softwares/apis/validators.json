{
    "name": "apis-irestful-validators",
    "parents": [
        "http://code.irestful.com/configs/parent/crud.json"
    ],
    "environment_variables": {
        "container_name": "VALIDATORS_CONTAINER_NAME"
    },
    "rest_apis": {
        "insert_middle_elements": {
            "params": {
                "foreign_keys": {
                    "sub_validators": {
                        "middle_container": "validator_sub_validators",
                        "parent_field": "uuid"
                    }
                }
            }
        }
    },
    "routes": {
        "http": [
            {
                "pattern": "/",
                "method": "post",
                "rest_api": "insert_middle_elements"
            },
            {
                "pattern": "/*uuid*",
                "method": "get",
                "rest_api": "retrieve_element_by_uuid"
            },
            {
                "pattern": "/*uuid*",
                "method": "delete",
                "rest_api": "delete_element"
            }
        ]
    }
}
